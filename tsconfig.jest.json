{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "jest.setup.ts",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}